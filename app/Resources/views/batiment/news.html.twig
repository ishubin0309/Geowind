{% extends 'base.html.twig' %}

{% set title = isNew ? 'Ajouter info' : 'Editer info' %}
{% set item = 'news' %}


{% block body %}
  <div class="container">
    <a href="{{ path('batiment_news') }}" class="btn btn-default btn-xs pull-right"><i class="fa fa-fw fa-close"></i> Annuler</a>
    <div class="page-title"><h1>{{ title }}</h1></div>
    <hr>
    {{ form_start(form) }}

    {{ form_rest(form) }}
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <button type="submit" class="btn btn-primary"><i class="fa fa-check fa-fw"></i> Valider</button>
      </div>
    </div>
    {{ form_end(form) }}
  </div>
{% endblock %}

{% block js %}
<script>
  $('#news_saisie').val('{{ app.user.username }}');
  $('#news_dateSaisie').datepicker({
    format: 'dd/mm/yyyy',
    autoclose: true,
    language: 'fr',
    clearBtn: true,
  });
  $('#news_dateParution').datepicker({
    format: 'dd/mm/yyyy',
    autoclose: true,
    language: 'fr',
    clearBtn: true,
  });
</script>
{% endblock %}
