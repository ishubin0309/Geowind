{% extends 'base.html.twig' %}

{% set title = 'Ajouter un mod√®le de panneaux pv' %}
{% set item = 'batiment' %}

{% block body %}
  <div class="container">
    <a href="{{ path('batiment_index') }}" class="btn btn-default btn-xs pull-right"><i class="fa fa-fw fa-close"></i> Annuler</a>
    <div class="page-title"><h1>{{ title }}</h1></div>
    <hr>
    <div class="row">
      <div class="col-sm-12">
      {{ form_start(form) }}
      {{ form_row(form.marque) }}
      {{ form_row(form.pays) }}
      {{ form_row(form.technique) }}
      {{ form_row(form.nom) }}
      {{ form_row(form.puissance) }}
      {{ form_row(form.longueur) }}
      {{ form_row(form.largeur) }}
      {{ form_row(form.epaisseur) }}
      {{ form_row(form.poids) }}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <button type="submit" class="btn btn-primary"><i class="fa fa-check fa-fw"></i> Valider</button>
      </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
  </div>
{% endblock %}

