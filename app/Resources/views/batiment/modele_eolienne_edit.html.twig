{% extends 'base.html.twig' %}

{% set title = 'Modifier ' ~ modeleEolienne %}
{% set item = 'batiment' %}

{% block body %}
  <div class="container">
    <a href="{{ path('batiment_index') }}" class="btn btn-default btn-xs pull-right"><i class="fa fa-fw fa-close"></i> Annuler</a>
    <div class="page-title"><h1><i class="fa fa-fw fa-pencil"></i> {{ title }}</h1></div>
    <hr>
    <div class="row">
      <div class="col-sm-12">
      {{ form_start(form) }}
      {{ form_row(form.marque) }}
      {{ form_row(form.nom) }}
      {{ form_row(form.pays) }}
      {{ form_row(form.puissance) }}
      {{ form_row(form.hauteurMat) }}
      {{ form_row(form.diametreRotor) }}
      {{ form_row(form.hauteurTotale) }}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <button type="submit" class="btn btn-primary"><i class="fa fa-check fa-fw"></i> Valider</button>
      </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
  </div>
{% endblock %}

{% block js %}
<script>
  $('#modele_eolienne_hauteurMat ,#modele_eolienne_diametreRotor').change(function() {
    var hauteur = $('#modele_eolienne_hauteurMat').val().trim().replace(/'/, '.');
    var diametre_rotor = $('#modele_eolienne_diametreRotor').val().trim().replace(/'/, '.');
    if(!hauteur || !diametre_rotor) $('#modele_eolienne_hauteurTotale').val(0);
    else {
      var hauteur_totale = (parseFloat(hauteur) + (parseFloat(diametre_rotor) / 2));
      $('#modele_eolienne_hauteurTotale').val(hauteur_totale);
    }
  });
</script>
{% endblock %}
