      var found = 0;
      $('#tableaux_by_user tr').each(function(index2, row2) {
        if(!found && $(row2).attr('rel') > total) {
          $('<tr rel="'+total+'"><td>'+users[index]+'</td>'+rest+'</tr>').insertBefore($(row2));
