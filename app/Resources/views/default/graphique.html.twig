            {% if projet.progression == 'rejet' %}
              {% set class = 'refused' %}
            {% elseif projet.progression == 'en_attente' %}
              {% set en_attente = 1 %}
              {% set class = 'in_progress' %}
            {% endif %}
          {% elseif projet.phase == 'decision2' %}
            {% set column = 10 %}
            {% if projet.progression == 'rejet' %}
              {% set class = 'refused' %}
            {% elseif projet.progression == 'en_attente' %}
              {% set en_attente = 1 %}
              {% set class = 'in_progress' %}
            {% endif %}
          {% elseif projet.phase == 'decision3' %}
            {% set column = 18 %}
            {% if projet.progression == 'rejet' %}
